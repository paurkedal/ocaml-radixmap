(jbuild_version 1)

(library
 ((name testkit)
  (wrapped false)
  (modules (Testkit))
  (libraries (unix))))

(executable
 ((name test_bitword)
  (modules (Test_bitword))
  (libraries (radixmap testkit))))

(executable
 ((name test_bitword_radixmap)
  (modules (Test_bitword_radixmap))
  (libraries (radixmap testkit))))

(executable
 ((name test_ip_radixset)
  (modules (Test_ip_radixset))
  (libraries (radixmap_ipaddr testkit))))

(executable
 ((name test_ip_radixmap)
  (modules (Test_ip_radixmap))
  (libraries (radixmap_ipaddr testkit))))

(alias ((name runtest) (deps (test_bitword.exe)) (action (run ${<}))))
(alias ((name runtest) (deps (test_bitword_radixmap.exe)) (action (run ${<}))))
(alias ((name runtest) (deps (test_ip_radixset.exe)) (action (run ${<}))))
(alias ((name runtest) (deps (test_ip_radixmap.exe)) (action (run ${<}))))
